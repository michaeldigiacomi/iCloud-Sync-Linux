###############################################
# iCloud Sync Linux example .env configuration #
###############################################
# Copy this file to .env and adjust values     #
###############################################

# Core credentials (required unless NO_REMOTE=1)
ICLOUD_USERNAME=your.email@example.com
ICLOUD_PASSWORD=your_app_specific_password      # create via https://appleid.apple.com/ (app-specific)

# Paths & timing
LOCAL_DIRECTORY=~/iCloud                        # local sync directory root
SYNC_INTERVAL=300                               # seconds between remote polls (min 5)

# Logging
LOG_FILE=~/icloud-sync.log
LOG_LEVEL=INFO                                  # DEBUG|INFO|WARNING|ERROR|CRITICAL

# State & advanced features
STATE_FILE=~/iCloud/.icloud_sync_state.json
ENABLE_CHECKSUM=0                               # 1 to compute SHA-256 for files
CONFLICT_STRATEGY=prefer_newer                  # prefer_newer|prefer_local|prefer_remote|keep_both
INCLUDE_PATTERNS=                               # e.g. *.txt,docs/*.md
EXCLUDE_PATTERNS=                               # e.g. *.bak,*.tmp
DRY_RUN=0                                       # 1 to simulate actions only
NO_REMOTE=0                                     # 1 for local watcher only (no iCloud access)

# Verbosity & metrics
VERBOSE_DECISIONS=0                             # 1 to log per-file decisions at INFO
STATS_INTERVAL=0                                # >0 emits STATS every N seconds
PROGRESS_SUMMARY=0                              # 1 to log summary each pass

# HTTP metrics endpoint (optional)
METRICS_HTTP=0                                  # 1 to enable
METRICS_PORT=8787                               # listening port
METRICS_HOST=127.0.0.1                          # bind host
METRICS_PATH=/metrics                           # endpoint path
METRICS_TOKEN=                                  # optional bearer token auth

# Keyring integration (optional)
USE_KEYRING=0                                   # 1 to read/store password in system keyring
KEYRING_SERVICE=icloud-sync                     # service label for keyring lookup

# Two-factor (leave unset for interactive prompt)
# ICLOUD_2FA_CODE=123456

# End of file
